---
import { marked } from 'marked';
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import MainNav from "../components/MainNav.astro";
import Footer from "../components/Footer.astro";
import SkipToMain from "../components/SkipToMain.astro";

type PropsLegal = CollectionEntry<'legal'>['data'];

const { title, content } = Astro.props as PropsLegal;

const contentHTML = marked(content);
---

<html lang="en">
  <head>
    <BaseHead
      title={`${title} | Sun City Mechanical`}
      description={`${title} page for Sun City Mechanical`}
      keywords="terms, privacy, policy, legal"
      image="/images/default-image.jpg"
      url={`https://www.suncitymechanical.com/${Astro.props.slug}`} />
    <meta name="author" content="Tripass Design" />
  </head>
  <body>
    <SkipToMain />
    <header>
      <MainNav />
    </header>
    <main>
      <section class="hero">
        <div class="hero-global">
          <div class="container">
            <div class="wrapper center">
              <div class="line"></div>
              <h1 class="page-title">{title}</h1>
            </div>
          </div>
        </div>
      </section>
      <section>
        <div class="padding-global">
          <div class="container legal-content">
            <div set:html={contentHTML}></div>
          </div>
        </div>
      </section>
    </main>
    <footer class="footer">
      <Footer />
    </footer>
  </body>
</html>

<style>
  .legal-content {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
    font-size: 1rem;
    color: #333;
  }

  /* Headings */
  .legal-content h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 2rem;
    color: #444;
    border-bottom: 1px solid #ddd;
    padding-bottom: 0.5rem;
  }

  .legal-content h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
    color: #555;
  }

  /* Paragraphs */
  .legal-content p {
    margin-bottom: 1.25rem;
    font-size: 1rem;
    line-height: 1.8;
  }

  /* Unordered Lists */
  .legal-content ul {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
    list-style-type: disc;
  }

  .legal-content ul li {
    margin-bottom: 0.75rem;
    line-height: 1.6;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .legal-content {
      padding: 0 1rem;
    }

    .legal-content h2 {
      font-size: 1.75rem;
    }

    .legal-content h3 {
      font-size: 1.25rem;
    }

    .legal-content p,
    .legal-content ul {
      font-size: 0.95rem;
    }
  }
</style>
