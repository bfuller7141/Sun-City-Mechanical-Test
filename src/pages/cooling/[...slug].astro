---
import ServicePage from "../../layouts/ServicePage.astro";
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const airQuality = await getCollection("cooling");
  return airQuality.map((item) => ({
    params: { slug: item.slug },
    props: { ...item },
  }));
}

type Props = CollectionEntry<'cooling'>;

const coolingItem = Astro.props as Props;
const { Content } = await coolingItem.render();
---

<ServicePage {...coolingItem.data}></ServicePage>
  <Content />
</ServicePage>
